<div class="d-flex flex-column flex-md-row justify-content-start align-items-center mb-2">
  <div class="text-center w-30 p-2">
    <input id="foodmenu-input-item-<%= item.id %>-checkbox" class="form-check-input" type="checkbox" value="true">
  </div>
  <div class="text-center w-120 p-2">
    <strong>
      <%= item.item %>
    </strong>
  </div>
  <div class="text-start text-wrap w-50 p-2">
    <span>
      <%= item.name %>
    </span>
    <br>
    <small class="text-sm">
      <%= item.allergens %>
    </small>
  </div>
  <div class="text-center w-220 p-2">
    <span>
      <%= item.weightOrVolume %>
    </span>
  </div>
  <div class="text-end w-90 p-2">
    <% if(item.id === 1){ %>
      <span></span>
    <% }else{ %>
      <span>
        <%= item.price %>&nbsp;&euro;
      </span>
    <% } %>
  </div>
  <div class="text-end w-160 p-2">
    <div class="d-flex justify-content-between align-items-center">
      <input 
        id="foodmenu-input-item-<%= item.id %>-qty" 
        class="form-control rounded-0 border-0 border-bottom bg-transparent text-white text-start w-80" 
        type="number" 
        value="0" 
        min="1" 
        max="<%= item.qty %>"
      >
      <span class="ps-2">&nbsp;/&nbsp;<%= item.qty %></span>
    </div>
  </div>
</div>